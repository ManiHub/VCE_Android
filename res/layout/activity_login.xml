<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}"
    tools:ignore="HardcodedText" 
    android:background="@drawable/abc">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:text="Vasavi College of Engineering"
        android:textColor="@color/white"
        android:textSize="23sp"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/checkBox1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="171dp"
        android:text="Remember my Password"
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/user_tb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="95dp"
        android:ems="10"
        android:hint="User Id"
        android:text="1602-10-733-079" />

    <TextView
        android:id="@+id/namet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editText1"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="55dp"
        android:text="User Id"
        android:textColor="@color/white"
        android:textSize="23sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/pswd_tb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/named"
        android:layout_centerVertical="true"
        android:ems="10"
        android:hint="*******"
        android:inputType="textPassword"
        android:text="unface" >
          
        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/textView1"
        android:layout_alignTop="@+id/checkBox1"
        android:layout_marginRight="16dp"
        android:layout_marginTop="52dp"
        android:onClick="@string/OnloginBtnclick"
        android:text="Login"
        android:width="63dp" />

    <TextView
        android:id="@+id/named"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/user_tb"
        android:layout_marginTop="14dp"
        android:text="Password"
        android:textColor="@color/white"
        android:textSize="23dp"
        android:textStyle="bold" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-3585437342896413/8967399280" >
    </com.google.android.gms.ads.AdView>

</RelativeLayout>
